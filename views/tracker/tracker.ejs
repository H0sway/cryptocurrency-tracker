<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Track Your Crypto Investments</title>
  <% include ../partials/head %>
</head>
<body>

  <% include ../partials/header %>

  <h1>Your Investments</h1>

  <div class="links">
    <div class="link">
      <a href="/tracker/tracker/new">Add a New Currency</a>
    </div>
    <div class="link">
      <a href="/tracker/">Top 20 Currencies</a>
    </div>
  </div>

  <table class="personal">
    <tr>
      <th>Name</th>
      <th>Link</th>
    </tr>
    <% currencies.forEach((currency) => { %>
    <tr>
      <td><%= currency.currency_id %></td>
      <td><a href=" /tracker/tracker/<%=currency.id%> ">Link!</a></td>
    </tr>
    <% }) %>
  </table>
</body>
</html>
